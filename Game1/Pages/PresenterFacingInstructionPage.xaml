<Page x:Class="Game1.Pages.PresenterFacingInstructionPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Game1.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PresenterFacingInstructionPage">

    <Grid>
        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="24">
            Position this window so it is visible to only the presenter.
        </TextBlock>
        <Button Name="StartGameButton" Height="30" Width="100" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="30" Click="StartGameButton_Click">Continue</Button>
    </Grid>
</Page>
